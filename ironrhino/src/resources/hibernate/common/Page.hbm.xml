<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ironrhino.common.model"
	default-lazy="true">
	<class name="Page" table="common_page">
		<id name="id" type="java.lang.String" 
			unsaved-value="null">
			<generator class="org.ironrhino.core.hibernate.StringIdGenerator" />
		</id>
		<natural-id mutable="true">
			<property name="path" />
		</natural-id>
		<property name="title" />
		<property name="content" length="5000" not-null="true"/>
		<property name="draft" length="5000"/>
		<property name="draftDate" />
		<property name="createDate" />
		<property name="modifyDate" />
	</class>
</hibernate-mapping>