<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ironrhino.online.model"
	default-lazy="true">
	<class name="Order" table="online_order" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" type="java.lang.String" length="32"
			unsaved-value="null">
			<generator class="uuid" />
		</id>
		<natural-id>
			<property name="code" not-null="true" />
		</natural-id>
		<property name="total" />
		<property name="discount" />
		<property name="shipcost" />
		<property name="grandtotal" />
		<property name="orderDate" />
		<property name="payment" />
		<property name="payDate" />
		<property name="shipment" />
		<property name="shipDate" />
		<property name="status">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">
					org.ironrhino.online.model.OrderStatus
				</param>
				<param name="type">12</param>
			</type>
		</property>
		<property name="comment" />
		<property name="description" />
		<component name="addressee">
			<property name="name" />
			<property name="address" />
			<property name="postcode" />
			<property name="phone" />
		</component>
		<many-to-one name="account" column="accountId" not-null="true" />
		<many-to-one name="region" column="regionId" lazy="proxy" />
		<list name="items" table="online_orderItem" cascade="all">
			<key column="orderId" />
			<list-index column="lineNumber" />
			<composite-element class="OrderItem">
				<property name="quantity" />
				<property name="productCode" />
				<property name="productName" />
				<property name="productPrice" />
			</composite-element>
		</list>
	</class>
</hibernate-mapping>