<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ironrhino.online.model"
	default-lazy="true">
	<class name="Account" table="online_account" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" type="java.lang.String" length="32" unsaved-value="null">
			<generator class="uuid" />
		</id>
		<natural-id>
			<property name="username" not-null="true" />
		</natural-id>
		<property name="password" not-null="true" />
		<property name="email" not-null="true" unique="true" />
		<property name="openid" unique="true" />
		<property name="nickname" />
		<property name="name" />
		<property name="sex">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">
					org.ironrhino.common.model.Sex
				</param>
				<!-- if set type=12 then use name not ordinal
					<param name="type">12</param>
					-->
			</type>
		</property>
		<property name="birthday" />
		<property name="address" />
		<property name="postcode" />
		<property name="phone" />
		<property name="subscribed" />
		<property name="locked" />
		<property name="enabled" />
		<property name="gradePoint" />
		<property name="cumulatePoint" />
		<property name="loginTimes" />
		<property name="lastLoginDate" />
		<property name="lastLoginAddress" />
		<property name="createDate" />
		<list name="addressees" table="online_addressee" cascade="all"
			lazy="false">
			<key column="accountId" />
			<list-index column="lineNumber" />
			<composite-element class="org.ironrhino.common.model.Addressee">
				<property name="name" />
				<property name="address" />
				<property name="postcode" />
				<property name="phone" />
			</composite-element>
		</list>
		<many-to-one name="region" column="regionId" lazy="proxy" />
		<set name="roles" table="online_accountRole" cascade="all">
			<key column="accountId" />
			<composite-element class="org.ironrhino.common.model.SimpleElement">
				<property name="value" not-null="true" />
			</composite-element>
		</set>
		<set name="groups" table="online_accountGroup" cascade="all">
			<key column="accountId" />
			<composite-element class="org.ironrhino.common.model.SimpleElement">
				<property name="value" not-null="true" />
			</composite-element>
		</set>
	</class>
</hibernate-mapping>