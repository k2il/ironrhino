<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="account" namespace="/" extends="ironrhino-default">
		<action name="account"
			class="org.ironrhino.online.action.account.AccountAction">
			<result name="success" type="freemarker">
				/WEB-INF/view/ftl/account/index.ftl
			</result>
			<result name="signup" type="freemarker">
				/WEB-INF/view/ftl/account/signup.ftl
			</result>
			<result name="login" type="freemarker">
				/WEB-INF/view/ftl/account/login.ftl
			</result>
			<result name="manage" type="freemarker">
				/WEB-INF/view/ftl/account/manage.ftl
			</result>
			<result name="forgot" type="redirect">
				/account/login?tab=forgot
			</result>
			<result name="resend" type="redirect">
				/account/login?tab=resend
			</result>
			<result name="activate" type="redirect">
				/account/manage?tab=profile
			</result>
			<result name="profile" type="redirect">
				/account/manage?tab=profile
			</result>
			<result name="password" type="redirect">
				/account/manage?tab=password
			</result>
			<result name="email" type="redirect">
				/account/manage?tab=email
			</result>
			<result name="invite" type="redirect">
				/account/manage?tab=invite
			</result>
		</action>
	</package>
	<package name="account-other" namespace="/account"
		extends="ironrhino-default">
		<action name="switchUser">
			<result name="success" type="autoconfig"/>
		</action>
		<action name="favorite" class="org.ironrhino.online.action.account.FavoriteAction">
			<result name="success" type="autoconfig"/>
		</action>
		<action name="order"
			class="org.ironrhino.online.action.account.OrderAction">
			<result name="success" type="autoconfig"/>
			<result name="view" type="autoconfig"/>
			<result name="addressee" type="autoconfig"/>
		</action>
	</package>

</struts>
