<?xml version="1.0" encoding="UTF-8"?>
<beans default-autowire="byName"
	xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="rabbitmqConnectionFactory" class="com.rabbitmq.client.ConnectionFactory" p:host="${rabbitmq.host:localhost}"/>
	<bean id="rabbitmqConnection" factory-bean="rabbitmqConnectionFactory" factory-method="newConnection" destroy-method="close"/>
	<bean id="applicationEventPubSub" class="org.ironrhino.core.event.ApplicationEventPubSub"/>
	<bean id="simpleMailMessageWrapperQueue" class="org.ironrhino.core.mail.SimpleMailMessageWrapperQueue"/>
</beans>