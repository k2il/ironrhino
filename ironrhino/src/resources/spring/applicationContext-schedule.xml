<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="scheduler"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="triggerJobDetailTicketRegistryCleaner" />
				<ref local="dailyBatchExecutorTrigger" />
				<ref local="weeklyBatchExecutorTrigger" />
			</list>
		</property>
	</bean>

	<bean id="dailyBatchExecutorTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean
				class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject" ref="dailyBatchExecutor" />
				<property name="targetMethod" value="execute" />
			</bean>
		</property>
		<property name="cronExpression" value="0 5 0 * * ?" />
	</bean>

	<bean id="dailyBatchExecutor" autowire="byName"
		class="org.ironrhino.common.support.BatchExecutor">
		<property name="commands">
			<list>
				<value>call("productPageGenerator.generate()")</value>
				<value>call("statControl.archive()")</value>
				<value>call("searchHitsControl.consume()")</value>
			</list>
		</property>
	</bean>

	<bean id="weeklyBatchExecutorTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean
				class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject" ref="weeklyBatchExecutor" />
				<property name="targetMethod" value="execute" />
			</bean>
		</property>
		<property name="cronExpression" value="0 50 23 ? * MON" />
	</bean>

	<bean id="weeklyBatchExecutor" autowire="byName"
		class="org.ironrhino.common.support.BatchExecutor">
		<property name="commands">
			<list>
				<value>call("productManager.updateNewArrival()")</value>
				<value>call("newArrivalProductNotifier.send()")</value>
				<value>
					call("accountManager.deleteDisabledAccount()")
				</value>
			</list>
		</property>
	</bean>
</beans>
