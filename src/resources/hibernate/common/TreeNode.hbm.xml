<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ironrhino.common.model"
	default-lazy="true">
	<class name="TreeNode" table="common_treenode">
		<id name="id" type="java.lang.Long" unsaved-value="null">
			<generator class="identity" />
		</id>
		<natural-id mutable="true">
			<property name="fullId" />
		</natural-id>
		<property name="name" not-null="true" />
		<property name="level" />
		<property name="displayOrder" />
		<property name="description" />
		<property name="attributesAsString" length="1024" />
		<many-to-one name="parent" class="TreeNode" column="parentId" />
		<set name="children" inverse="true" cascade="delete" lazy="true"
			order-by="displayOrder,name">
			<key column="parentId" />
			<one-to-many class="TreeNode" />
		</set>
	</class>
</hibernate-mapping>